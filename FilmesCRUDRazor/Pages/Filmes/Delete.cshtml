    ViewData["Title"] = "Delete";
}

<div class="container">
    <div>

        <h3>Deseja mesmo excluir este registro?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Filme.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Filme.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Filme.DataLancamento)
                </dt>
                <dd class="col-sm-10">
