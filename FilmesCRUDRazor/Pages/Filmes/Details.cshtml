@model FilmesCRUDRazor.Pages.Filmes.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <div >
        <h2> @Html.DisplayFor(model => model.Filme.Titulo)</h2>
        <div>
            <h4>Filmes Top +</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Filme.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Filme.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Filme.DataLancamento)
